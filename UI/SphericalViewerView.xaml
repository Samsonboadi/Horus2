<UserControl x:Class="Test.UI.SphericalViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             MinWidth="500"
             MinHeight="600">

    <UserControl.Resources>
        <!-- Use built-in BooleanToVisibilityConverter instead of custom one -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- ArcGIS Pro Professional Color Palette -->
        <SolidColorBrush x:Key="EsriBlue" Color="#0079C1"/>
        <SolidColorBrush x:Key="EsriLightBlue" Color="#00A9CE"/>
        <SolidColorBrush x:Key="EsriDarkBlue" Color="#004874"/>
        <SolidColorBrush x:Key="EsriGray" Color="#6D6E71"/>
        <SolidColorBrush x:Key="EsriLightGray" Color="#D1D3D4"/>
        <SolidColorBrush x:Key="EsriBackground" Color="#F7F8F8"/>
        <SolidColorBrush x:Key="EsriWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="EsriDarkGray" Color="#323334"/>
        <SolidColorBrush x:Key="EsriSuccess" Color="#5CA05B"/>
        <SolidColorBrush x:Key="EsriWarning" Color="#FF7F00"/>
        <SolidColorBrush x:Key="EsriError" Color="#DE2900"/>

        <!-- Professional ArcGIS Button Style -->
        <Style x:Key="EsriButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource EsriBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource EsriBlue}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource EsriLightBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource EsriDarkBlue}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource EsriLightGray}"/>
                                <Setter Property="Foreground" Value="{StaticResource EsriGray}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="EsriSecondaryButton" TargetType="Button" BasedOn="{StaticResource EsriButton}">
            <Setter Property="Background" Value="{StaticResource EsriWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource EsriDarkGray}"/>
            <Setter Property="BorderBrush" Value="{StaticResource EsriLightGray}"/>
        </Style>

        <!-- Tool Button Style -->
        <Style x:Key="EsriToolButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource EsriDarkGray}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4FD"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource EsriLightBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCE8F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Professional TextBox Style -->
        <Style x:Key="EsriTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource EsriWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource EsriLightGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinHeight" Value="24"/>
        </Style>

        <!-- Professional GroupBox Style -->
        <Style x:Key="EsriGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource EsriLightGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource EsriDarkGray}"/>
            <Setter Property="Background" Value="{StaticResource EsriWhite}"/>
        </Style>

        <!-- Professional Slider Style -->
        <Style x:Key="EsriSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <!-- Professional Label Style -->
        <Style x:Key="EsriLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource EsriDarkGray}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="EsriSectionHeader" TargetType="TextBlock" BasedOn="{StaticResource EsriLabel}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,6"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Container -->
    <Grid Background="{StaticResource EsriBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Professional Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource EsriDarkGray}" 
                BorderBrush="{StaticResource EsriGray}" 
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" 
                       Width="16" Height="16" 
                       Margin="0,0,8,0"
                       VerticalAlignment="Center">
                    <!-- You can add an icon here -->
                </Image>

                <TextBlock Grid.Column="1"
                           Text="Spherical Image Viewer" 
                           Foreground="White" 
                           FontFamily="Segoe UI"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2" 
                        Content="Settings..." 
                        Style="{StaticResource EsriSecondaryButton}"
                        Command="{Binding OpenSettingsCommand}"
                        Background="Transparent"
                        BorderBrush="{StaticResource EsriGray}"
                        Foreground="White"
                        FontSize="11"
                        Padding="8,4"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="8">
            <StackPanel>

                <!-- Image Display Section -->
                <GroupBox Header="360° Image View" Style="{StaticResource EsriGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <ToolBarTray Grid.Row="0" Margin="0,0,0,8" Background="Transparent">
                            <ToolBar Background="Transparent" BorderThickness="0">
                                <Button Content="Load Images" 
                                        Style="{StaticResource EsriButton}"
                                        Command="{Binding LoadImagesCommand}"
                                        IsEnabled="{Binding IsConnected}"
                                        ToolTip="Load images from server"/>
                                <Separator/>
                                <Button Content="Refresh" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding RefreshCommand}"
                                        ToolTip="Refresh current view"/>
                                <Button Content="Reset" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding ResetViewCommand}"
                                        ToolTip="Reset camera to default position"/>
                            </ToolBar>
                        </ToolBarTray>

                        <!-- Image Display Area -->
                        <Border Grid.Row="1" 
                                Background="Black" 
                                BorderBrush="{StaticResource EsriLightGray}"
                                BorderThickness="1"
                                Margin="0,0,0,8">
                            <Grid>
                                <Image x:Name="MainImage"
                                       Source="{Binding CurrentImage}" 
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       MouseLeftButtonDown="MainImage_MouseLeftButtonDown"
                                       MouseLeftButtonUp="MainImage_MouseLeftButtonUp"
                                       MouseMove="MainImage_MouseMove"
                                       MouseWheel="MainImage_MouseWheel"
                                       Cursor="Hand"/>

                                <!-- Section indicator overlay -->
                                <Border HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="8"
                                        Padding="6,3"
                                        CornerRadius="4"
                                        Background="#80000000">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Section: " Foreground="White" FontFamily="Segoe UI" FontSize="12"/>
                                        <TextBlock Text="{Binding CurrentSection}" Foreground="White" FontFamily="Segoe UI" FontSize="12"/>
                                        <TextBlock Text=" / " Foreground="White" FontFamily="Segoe UI" FontSize="12"/>
                                        <TextBlock Text="{Binding SectionCount}" Foreground="White" FontFamily="Segoe UI" FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <!-- Professional Placeholder -->
                                <StackPanel HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasImage}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Rectangle Width="64" Height="64" 
                                             Fill="{StaticResource EsriGray}" 
                                             Opacity="0.3"
                                             Margin="0,0,0,12"/>
                                    <TextBlock Text="No image loaded" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               FontFamily="Segoe UI"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Use 'Load Images' to connect and load spherical images" 
                                               FontSize="11" 
                                               Foreground="#CCCCCC" 
                                               FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" 
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Loading Overlay -->
                                <Border Background="#80000000"
                                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ProgressBar IsIndeterminate="True" Width="120" Height="4" Margin="0,0,0,8"/>
                                        <TextBlock Text="Processing..." 
                                                   Foreground="White" 
                                                   FontFamily="Segoe UI"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Frame Navigation -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Navigation Controls -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Content="⏮" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding FirstFrameCommand}" 
                                        ToolTip="First Frame"
                                        FontSize="14"/>
                                <Button Content="⏪" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding PreviousFrameCommand}" 
                                        ToolTip="Previous Frame"
                                        FontSize="14"/>
                                <Button Content="⏩" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding NextFrameCommand}" 
                                        ToolTip="Next Frame"
                                        FontSize="14"/>
                                <Button Content="⏭" 
                                        Style="{StaticResource EsriToolButton}"
                                        Command="{Binding LastFrameCommand}" 
                                        ToolTip="Last Frame"
                                        FontSize="14"/>
                            </StackPanel>

                            <!-- Frame Info -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding FrameInfo}" 
                                       Style="{StaticResource EsriLabel}"
                                       VerticalAlignment="Center"
                                       FontWeight="Normal"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- Horus Media Connection Section -->
                <GroupBox Header="Horus Media Server" Style="{StaticResource EsriGroupBox}">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Connection Controls -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                    Content="Start Bridge"
                    Style="{StaticResource EsriButton}"
                    Command="{Binding StartPythonBridgeCommand}"
                    ToolTip="Start Python bridge server"/>

                            <Button Grid.Column="2"
                    Content="Test Connection"
                    Style="{StaticResource EsriSecondaryButton}"
                    Command="{Binding TestHorusConnectionCommand}"
                    ToolTip="Test Horus connection"/>

                            <!-- Connect/Disconnect Buttons -->
                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                <Button Content="Connect Horus"
                        Command="{Binding ConnectHorusCommand}"
                        ToolTip="Connect to Horus media server">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource EsriButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHorusConnected}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Disconnect"
                        Command="{Binding DisconnectHorusCommand}"
                        ToolTip="Disconnect from Horus media server">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource EsriButton}">
                                            <Setter Property="Background" Value="{StaticResource EsriWarning}"/>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHorusConnected}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Connection Status -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                       Text="Horus Status:" 
                       Style="{StaticResource EsriLabel}"
                       VerticalAlignment="Center"
                       Margin="0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="{StaticResource EsriError}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHorusConnected}" Value="True">
                                                    <Setter Property="Fill" Value="{StaticResource EsriSuccess}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock VerticalAlignment="Center" 
                           FontFamily="Segoe UI"
                           FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Not Connected"/>
                                            <Setter Property="Foreground" Value="{StaticResource EsriError}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHorusConnected}" Value="True">
                                                    <Setter Property="Text" Value="Connected"/>
                                                    <Setter Property="Foreground" Value="{StaticResource EsriSuccess}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!-- Recordings Selection -->
                        <Grid Grid.Row="2" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Select Recording:" Style="{StaticResource EsriLabel}"/>
                                <ComboBox ItemsSource="{Binding HorusRecordings}" 
                          SelectedItem="{Binding SelectedRecording}"
                          DisplayMemberPath="Name"
                          FontFamily="Segoe UI"
                          FontSize="12"
                          Height="24"
                          IsEnabled="{Binding IsHorusConnected}"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                    Content="Refresh"
                    Style="{StaticResource EsriSecondaryButton}"
                    Command="{Binding LoadHorusRecordingsCommand}"
                    IsEnabled="{Binding IsHorusConnected}"
                    VerticalAlignment="Bottom"
                    MinWidth="80"/>
                        </Grid>

                        <!-- Load Images Button -->
                        <Button Grid.Row="3"
                Content="Load Horus Images"
                Style="{StaticResource EsriButton}"
                Command="{Binding LoadHorusImagesCommand}"
                IsEnabled="{Binding IsHorusConnected}"
                HorizontalAlignment="Left"
                MinWidth="150"/>
                    </Grid>
                </GroupBox>

                <!-- WFS &amp; Selection -->
                <GroupBox Header="WFS &amp; Selection" Style="{StaticResource EsriGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="Load WFS Points" Style="{StaticResource EsriButton}"
                                    Command="{Binding LoadWfsPointsCommand}"/>
                            <Button Content="Clear WFS" Style="{StaticResource EsriSecondaryButton}"
                                    Command="{Binding ClearWfsPointsCommand}"/>
                            <Button Content="Activate Select Tool" Style="{StaticResource EsriSecondaryButton}"
                                    Command="{Binding ActivateSelectToolCommand}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox Content="Multi-select" IsChecked="{Binding IsMultiSelectMode}" Margin="0,0,12,0"/>
                            <Button Content="Prev" Style="{StaticResource EsriToolButton}"
                                    Command="{Binding PreviousSelectedCommand}"/>
                            <Button Content="Next" Style="{StaticResource EsriToolButton}"
                                    Command="{Binding NextSelectedCommand}"/>
                            <Button Content="Detect Selection" Style="{StaticResource EsriButton}"
                                    Command="{Binding RunDetectionOnSelectionCommand}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="{Binding WfsStatus}" Style="{StaticResource EsriLabel}" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding SelectionInfo}" Style="{StaticResource EsriLabel}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Camera Controls Section -->
                <GroupBox Header="Camera Controls" Style="{StaticResource EsriGroupBox}">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Yaw Control -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Yaw:" 
                                       Style="{StaticResource EsriLabel}"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    Minimum="-180" Maximum="180" 
                                    Value="{Binding Yaw}"
                                    Style="{StaticResource EsriSlider}"
                                    TickFrequency="45"
                                    IsSnapToTickEnabled="False"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            <TextBox Grid.Column="2" 
                                     Text="{Binding Yaw, StringFormat='{}{0:F1}°'}" 
                                     Style="{StaticResource EsriTextBox}"
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Background="{StaticResource EsriBackground}"/>
                        </Grid>

                        <!-- Pitch Control -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Pitch:" 
                                       Style="{StaticResource EsriLabel}"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    Minimum="-90" Maximum="90" 
                                    Value="{Binding Pitch}"
                                    Style="{StaticResource EsriSlider}"
                                    TickFrequency="30"
                                    IsSnapToTickEnabled="False"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            <TextBox Grid.Column="2" 
                                     Text="{Binding Pitch, StringFormat='{}{0:F1}°'}" 
                                     Style="{StaticResource EsriTextBox}"
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Background="{StaticResource EsriBackground}"/>
                        </Grid>

                        <!-- Roll Control -->
                        <Grid Grid.Row="2" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Roll:" 
                                       Style="{StaticResource EsriLabel}"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    Minimum="-180" Maximum="180" 
                                    Value="{Binding Roll}"
                                    Style="{StaticResource EsriSlider}"
                                    TickFrequency="45"
                                    IsSnapToTickEnabled="False"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            <TextBox Grid.Column="2" 
                                     Text="{Binding Roll, StringFormat='{}{0:F1}°'}" 
                                     Style="{StaticResource EsriTextBox}"
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Background="{StaticResource EsriBackground}"/>
                        </Grid>

                        <!-- FOV Control -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="FOV:" 
                                       Style="{StaticResource EsriLabel}"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    Minimum="30" Maximum="180" 
                                    Value="{Binding Fov}"
                                    Style="{StaticResource EsriSlider}"
                                    TickFrequency="30"
                                    IsSnapToTickEnabled="False"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            <TextBox Grid.Column="2" 
                                     Text="{Binding Fov, StringFormat='{}{0:F1}°'}" 
                                     Style="{StaticResource EsriTextBox}"
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Background="{StaticResource EsriBackground}"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- AI Detection Section -->
                <!-- AI Detection Section -->
                <GroupBox Header="AI Object Detection" Style="{StaticResource EsriGroupBox}">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Model and Target Selection -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="AI Model:" Style="{StaticResource EsriLabel}"/>
                                <ComboBox ItemsSource="{Binding AvailableModels}" 
                          SelectedItem="{Binding SelectedModel}"
                          FontFamily="Segoe UI"
                          FontSize="12"
                          Height="24"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Detection Target:" Style="{StaticResource EsriLabel}"/>
                                <TextBox Text="{Binding DetectionText}" 
                         Style="{StaticResource EsriTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Run Detection Button -->
                        <Button Grid.Row="1" 
                Content="Run Detection" 
                Command="{Binding RunDetectionCommand}"
                Style="{StaticResource EsriButton}"
                IsEnabled="{Binding IsConnected}"
                HorizontalAlignment="Left"
                Margin="0,0,0,12"
                MinWidth="120"/>

                        <!-- Results Header -->
                        <TextBlock Grid.Row="2"
                   Text="{Binding DetectionResults.Count, StringFormat='Detection Results ({0} objects found)'}"
                   Style="{StaticResource EsriSectionHeader}"
                   Margin="0,0,0,4"/>

                        <!-- Results List -->
                        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding DetectionResults}"
                  MaxHeight="150"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  FontFamily="Segoe UI"
                  FontSize="11"
                  Background="{StaticResource EsriWhite}"
                  BorderBrush="{StaticResource EsriLightGray}"
                  BorderThickness="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Object" Binding="{Binding ObjectName}" Width="*"/>
                                <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence, StringFormat=P1}" Width="80"/>
                                <DataGridTextColumn Header="Model" Binding="{Binding ModelUsed}" Width="100"/>
                            </DataGrid.Columns>
                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DetectionResults.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>
                        </DataGrid>

                        <!-- No Results Message -->
                        <TextBlock Grid.Row="3"
                   Text="No detection results. Run detection to see results here."
                   FontStyle="Italic"
                   Foreground="{StaticResource EsriGray}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource EsriLabel}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DetectionResults.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Professional Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource EsriWhite}" 
                BorderBrush="{StaticResource EsriLightGray}" 
                BorderThickness="0,1,0,0" 
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}"
                          Style="{StaticResource EsriLabel}"
                          VerticalAlignment="Center"
                          Margin="0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Margin="0,0,6,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource EsriError}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource EsriSuccess}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center" 
                               FontFamily="Segoe UI"
                               FontSize="11">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Disconnected"/>
                                <Setter Property="Foreground" Value="{StaticResource EsriError}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Connected"/>
                                        <Setter Property="Foreground" Value="{StaticResource EsriSuccess}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
